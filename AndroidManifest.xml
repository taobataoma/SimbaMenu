<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oldhawk.simbamenu"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
	
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/> 
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/customtitlebar" >
        <activity
            android:name="com.oldhawk.simbamenu.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.oldhawk.simbamenu.MainActivity"
            android:label="@string/app_name"
        	android:screenOrientation="landscape" >
        </activity>

        <activity
            android:name="com.oldhawk.simbamenu.MenuItemInfoDialog"
            android:label="@string/info_title"
            android:theme="@style/MyDialogStyle"
        	android:screenOrientation="landscape" >
        </activity>
        
    </application>

</manifest>